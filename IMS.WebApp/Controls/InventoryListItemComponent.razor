@if (Inventories != null && Inventories.Any())
{
    @foreach (var inv in Inventories)
    {
        <tr>
            <td>@inv.InventoryName</td>
            <td>@inv.Qiantity</td>
            <td>@inv.Price.ToString("C")</td>
            <td>
                <button type="button"
                class="btn btn-light">
                    Edit
                </button>
            </td>

        </tr>
    }
}

@code {

    #region Parameters

    [Parameter]
    public List<Inventory> Inventories { get; set; } = new List<Inventory>();

    #endregion

}
